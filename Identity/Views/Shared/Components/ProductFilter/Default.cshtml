@* @model IQueryable<string> *@
@model Identity.Components.ProductFilterViewComponent.FilterOptions

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Customer" asp-action="Index" asp-route-category="" asp-route-pageNum="">Home</a>
    
    @foreach (string category in Model.Categories ?? Enumerable.Empty<string>())
    {
        <a class="btn @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")" asp-controller="Customer" asp-action="Index" asp-route-category="@category" asp-route-pageNum="1">@category</a>
    }
</div>

<div>
    @foreach (string color in Model.Colors ?? Enumerable.Empty<string>())
    {
        <a class="btn btn-outline-secondary" asp-controller="Customer" asp-action="Index" asp-route-primaryColor="@color" asp-route-pageNum="1">@color</a>
    }
</div>