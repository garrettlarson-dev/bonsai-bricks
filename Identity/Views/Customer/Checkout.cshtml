@model Cart
<h1 class="bg-info text-white">Checkout</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Lines.Count; i++)
        {
            <tr>
                <td>@Model.Lines[i].Product.Name</td>
                <td>@Model.Lines[i].Quantity</td>
                <td>@Model.Lines[i].Product.Price</td>
                <td>@(Model.Lines[i].Quantity * Model.Lines[i].Product.Price)</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="PlaceOrder" asp-controller="Customer" method="post">
    <h2>Shipping Address</h2>
    <div class="form-group">
        <label for="street">Street:</label>
        <input type="text" id="street" name="street" required class="form-control">
    </div>
    <div class="form-group">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" required class="form-control">
    </div>
    <div class="form-group">
        <label for="state">State:</label>
        <input type="text" id="state" name="state" required class="form-control">
    </div>
    <div class="form-group">
        <label for="zip">Zip Code:</label>
        <input type="text" id="zip" name="zip" required class="form-control">
    </div>
    <div class="form-group">
        <label for="country">Country:</label>
        <input type="text" id="country" name="country" required class="form-control">
    </div>

    <h2>Bank and Payment Information</h2>
    <div class="form-group">
        <label for="bank">Bank Name:</label>
        <input type="text" id="bank" name="bank" required class="form-control">
    </div>
    <div class="form-group">
        <label for="typeOfCard">Type of Card:</label>
        <select id="typeOfCard" name="typeOfCard" required class="form-control">
            <option value="Visa">Visa</option>
            <option value="MasterCard">MasterCard</option>
            <option value="AmericanExpress">American Express</option>
            <option value="Discover">Discover</option>
            <option value="JCB">JCB</option>
        </select>
    </div>
    <button type="submit" class="btn-secondary">Place Order</button>
</form>